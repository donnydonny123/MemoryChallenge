                android:id="@+id/b16"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
