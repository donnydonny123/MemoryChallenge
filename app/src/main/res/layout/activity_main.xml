                android:id="@+id/b04"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/b05"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/b06"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/b07"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/b08"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/b09"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/b10"
                android:layout_width="match_parent"
